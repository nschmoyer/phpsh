#!/usr/bin/env php
<?php

if (!ini_get('date.timezone')) {
    ini_set('date.timezone', 'UTC');
}

$files = array(
    __DIR__ . '/../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php',
);

foreach ($files as $file) {
    echo $file . "\n";
    if (file_exists($file)) {
        $autoload = $file;
    }
}

require($autoload);

use phpsh\Runner;

$runner = new Runner();
$runner->run();